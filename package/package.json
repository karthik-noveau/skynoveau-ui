{
  "name": "skynoveau-ui",
  "version": "1.0.31",
  "description": "Skynoveau UI is a modern React-based design system offering customizable, accessible, and responsive UI components built for scalability and speed.",
  "author": "Karthik Noveau",
  "license": "MIT",
  "type": "module",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./constant": {
      "import": "./dist/constant/index.js"
    },
    "./constant/*": {
      "import": "./dist/constant/*.js"
    },
    "./hooks": {
      "import": "./dist/hooks/index.jsx"
    },
    "./hooks/*": {
      "import": "./dist/hooks/*.jsx"
    },
    "./utils": {
      "import": "./dist/utils/index.js"
    },
    "./utils/*": {
      "import": "./dist/utils/*.js"
    },
    "./theme/theme.css": "./dist/theme/theme.css",
    "./theme/style.module.css": "./dist/theme/style.module.css"
  },
  "scripts": {
    "dev": "vite",
    "copy:assets": "cp -r src/constant dist/constant &&  cp -r src/hooks dist/hooks && cp -r src/theme dist/theme && cp -r src/utils dist/utils && cp -r src/components/index.d.ts dist",
    "build": "vite build && npm run copy:assets",
    "lint": "eslint .",
    "preview": "vite preview",
    "publish": "npm run build && npm publish --access public"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "esbuild": "^0.25.4",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "antd": "^5.25.2"
  }
}
